<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".screens.morningsurvey.StartNewSurveyFragment">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40sp">

            <TextView
                android:id="@+id/morning_survey_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_weight="1"
                android:text="@string/morning_survey_title"
                android:textAlignment="center"
                android:textSize="@dimen/morning_survey_title_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/beach_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:ems="10"
                android:hint="@string/beach_hint"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/beach_sector_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:ems="10"
                android:hint="@string/beach_sector_hint"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:ems="10"
                android:hint="@string/date_hint"
                android:inputType="date" />

            <EditText
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:ems="10"
                android:hint="@string/time_hint"
                android:inputType="datetime" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="153dp"
            android:layout_height="41dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/start_new_survey_fab"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:clickable="true"
                app:srcCompat="@drawable/ic_add_black_24dp" />

            <TextView
                android:id="@+id/start_fab_desc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:text="@string/start_new_survey_button_fab" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/previous_fab"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:clickable="true"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

            <TextView
                android:id="@+id/previous_fab_desc_text"
                android:layout_width="71dp"
                android:layout_height="37dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:text="@string/previous_fab" />
        </LinearLayout>


    </LinearLayout>
</layout>